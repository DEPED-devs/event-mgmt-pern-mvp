{
  "info": {
    "name": "EventMgmt API",
    "_postman_id": "eventmgmt-collection",
    "description": "Collection for core endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (admin)",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw": "{\"username\":\"admin\",\"password\":\"AdminPass123!\"}"},
        "url": {"raw":"http://localhost:5000/api/auth/login","host":["http://localhost:5000"], "path":["api","auth","login"]}
      }
    },
    {
      "name":"List Events",
      "request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"http://localhost:5000/api/events","host":["{{baseUrl}}"],"path":["api","events"]}}
    },
    {
      "name":"Get Event Form",
      "request":{"method":"GET","header":[],"url":{"raw":"http://localhost:5000/api/evaluations/event/form/1","host":["http://localhost:5000"],"path":["api","evaluations","event","form","1"]}}
    },
    {
      "name":"Submit Event Eval",
      "request":{
        "method":"POST",
        "header":[{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}],
        "body":{"mode":"raw","raw":"{\"employee_id\":1,\"event_date_id\":null,\"answers\":[{\"question_id\":1,\"answer\":\"5\"},{\"question_id\":2,\"answer\":\"4\"}] }"},
        "url":{"raw":"http://localhost:5000/api/evaluations/event/1","host":["http://localhost:5000"],"path":["api","evaluations","event","1"]}
      }
    },
    {
      "name":"Formbuilder Update Event Questions",
      "request":{
        "method":"POST",
        "header":[{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}],
        "body":{"mode":"raw","raw":"{\"questions\":[{\"question_text\":\"Rate the venue\",\"question_type\":\"rating\",\"sort_order\":1}] }"},
        "url":{"raw":"http://localhost:5000/api/formbuilder/event/1","host":["http://localhost:5000"],"path":["api","formbuilder","event","1"]}
      }
    },
    {
      "name":"Event Analytics (admin)",
      "request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"http://localhost:5000/api/analytics/event/1","host":["{{baseUrl}}"],"path":["api","analytics","event","1"]}}
    },
    {
      "name":"Export Event CSV (admin)",
      "request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"http://localhost:5000/api/analytics/event/1/csv","host":["{{baseUrl}}"],"path":["api","analytics","event","1","csv"]}}
    }
  ]
}
